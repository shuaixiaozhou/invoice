                    </view>
                    <view class="weui-cell__bd">{{item.title}}</view>
                    <view class="weui-cell__ft weui-cell__ft_in-access">￥{{item.money/100.0}}</view>
                </navigator>
              </block>
          </view>
        </swiper-item>
      </swiper>
    </view>
</view>
